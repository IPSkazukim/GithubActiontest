[MASTER]
# 並列実行のジョブ数（0は自動検出）
jobs=1

[MESSAGES CONTROL]
# 無効にするメッセージ
# C0111: missing-docstring (docstringがないことに関する警告を無効化)
# R0903: too-few-public-methods (公開メソッドが少ないことに関する警告)
# W0511: fixme (TODO/FIXMEコメントに関する警告)
disable=C0114,
        C0115,
        C0116,
        R0903,
        W0511

[FORMAT]
# 1行の最大文字数
max-line-length=100

# モジュール名のスタイル
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$

# インデント文字列（スペース4つ）
indent-string='    '

[BASIC]
# 良い変数名のパターン
good-names=i,j,k,ex,Run,_,a,b,n

# 関数名のスタイル
function-rgx=[a-z_][a-z0-9_]{2,30}$

# メソッド名のスタイル
method-rgx=[a-z_][a-z0-9_]{2,30}$

# クラス名のスタイル
class-rgx=[A-Z_][a-zA-Z0-9]+$

# 定数名のスタイル
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$

[DESIGN]
# 引数の最大数
max-args=7

# ローカル変数の最大数
max-locals=15

# 戻り値の最大数
max-returns=6

# 分岐の最大数
max-branches=12

# 文の最大数
max-statements=50

[SIMILARITIES]
# 重複コードの最小行数
min-similarity-lines=4

# コメントを無視
ignore-comments=yes

# docstringを無視
ignore-docstrings=yes

# インポートを無視
ignore-imports=yes
